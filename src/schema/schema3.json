{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "myField": {
      "oneOf": [
        {
          "type": "object",
          "required": ["question"],
          "properties": {
            "question": {
              "type": "string",
              "enum": [
                "value1",
                "value2"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": ["question", "questionOther"],
          "properties": {
            "question": {
              "type": "string",
              "enum": ["other"]
            },
            "questionOther": {
              "type": "string"
            }
          }
        }
      ]
    }
  }
}